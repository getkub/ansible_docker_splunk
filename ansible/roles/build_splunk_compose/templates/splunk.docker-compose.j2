version: '2'
services:

{% for item in my_serverList %}

  {{item.hostname}}:
    image: {{dockerImage}}:{{dockerImageVersion}}
    container_name: {{item.hostname}}
    hostname: {{item.hostname}}
    env_file:
      - {{dest_base}}/{{project}}/buildDir/{{inputTag}}-specific/{{item.hostname}}/{{item.hostname}}.env
    volumes:
      - {{dest_base}}/{{project}}/buildDir/{{inputTag}}-specific/{{item.hostname}}/etc:/opt/splunk/etc/
      - {{dest_base}}/{{project}}/buildDir/{{inputTag}}-specific/{{item.hostname}}/var:/opt/splunk/var/
    ports:
      - {{item.portMapping}}
    labels:
      splunk.cluster: "{{item.hostGroup}}"
    networks:
      splunk:
        aliases:
          - {{item.hostname}}
    restart: always

{% endfor %}

networks:
  splunk:
